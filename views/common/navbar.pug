mixin navbar()
  header.sticky-top
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.font-weight-bold.shadow-sm
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      a.navbar-brand.d-block.mx-auto.mr-lg-3(href='#')
        img(src='/images/logo.svg' height="36" alt="Logo")
      #navbarSupportedContent.navbar-collapse.collapse.bg-white
        form.form-inline.my-2.my-lg-0.mr-2
          div.input-group.input-group-sm.w-100
            input.form-control(type='search' placeholder='Search...' aria-label='Search')
            div.input-group-append
              button.btn.btn-light.border(type='submit')
                img.px-2(src='/images/search.svg' alt="Search")
        ul.navbar-nav.mr-2
          if user
            a.nav-link(href='/upload') Post
          li.nav-item
            a.nav-link(href='#') Opdoot
          li.nav-item
            a.nav-link(href='#') Trending
        if user
          ul.navbar-nav.ml-auto
            li.nav-item.dropdown
              a#navbarDropdown.nav-link(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                img.profile-picture(src=user.profilePicture, alt=user.username width="40" height="40")
              .dropdown-menu.dropdown-menu-right.shadow-sm(aria-labelledby='navbarDropdown')
                a.dropdown-item(href='/logout') Log Out
        else
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='/signup') Sign Up
            li.nav-item
              a.nav-link(href='/login') Log In    

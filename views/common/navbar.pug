mixin navbar()
  header 
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.fixed-top.font-weight-bold.shadow-sm
      a.navbar-brand.d-block.mx-auto.mr-lg-3(href='#')
        img(src='images/logo.svg' height="36" alt="Logo")
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        form.form-inline.my-2.my-lg-0.mr-2
          div.input-group.input-group-sm.w-100
            input.form-control(type='search' placeholder='Search...' aria-label='Search')
            div.input-group-append
              button.btn.btn-light.border(type='submit')
                img.px-2(src='images/search.svg' alt="Search")
        ul.navbar-nav.mr-2
          if user
            a.nav-link(href='/upload') Post
          li.nav-item
            a.nav-link(href='#') Opdoot
          li.nav-item
            a.nav-link(href='#') Trending
        if user
          ul.navbar-nav.ml-auto
            li.nav-item
              span.navbar-text #{user.username}
            li.nav-item
              a.nav-link(href='/logout') Log out
        else
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='/signup') Sign Up
            li.nav-item
              a.nav-link(href='/login') Log In    

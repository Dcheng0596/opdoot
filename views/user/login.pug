include ../common/head.pug
include ../common/footer.pug

doctype html
html(lang='en')
  +head(title)
  body.bg-light
    main
      .h-100.d-flex.align-items-center
        .card.bg-white.mx-auto.px-3.signup.shadow.border-0.text-center
          a(href="/")
            img.card-img-top.mt-5(src="images/logo.svg", alt="Opdoot" height="62")
          h4.h4.font-weight-bold.mt-3.text-dark Welcome Back...
          h6.h6.text-dark.text-muted We were waiting patiently for your return
          .card-body
            form.form-group(action="/login" method='POST')
              p.small.text-danger #{errors}
              input(placeholder="Username or Email" name='username-email', type='text').form-control.bg-light
              input(placeholder="Password" name='password', type='password').form-control.bg-light.mt-4
              span.small.d-block.text-left
                a(href="/reset-password") Forgot password?
              button(disabled).btn.btn-primary.w-100.mb-1.mt-3 Log In
            span.small.text-secondary.mx-auto Dont have an account?  
              a(href="/signup") Sign Up
            .third-party.d-flex.flex-row.mt-4
              span.d-inline-block.border-bottom.w-100.mb-2.mr-2
              span.text-secondary OR
              span.d-inline-block.border-bottom.w-100.mb-2.ml-2
            span.text-secondary.small Log in with
            .d-flex.justify-content-center.socials.mb-5.mt-4
              a.mx-3(href="/auth/facebook")
                img.social(src="images/facebook.svg", alt="facebook" width="48")
              a.mx-3(href="/auth/google")
                img.social(src="images/google.svg", alt="google"  width="48" )
    +footer("login")
